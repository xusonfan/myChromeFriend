{
  "manifest_version": 3,
  "name": "我的上网伙伴",
  "version": "1.2.2",
  "description": "一个可爱的动漫少女，陪伴你的网上冲浪。",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "commands": {
    "refresh_summary": {
      "description": "刷新总结内容"
    },
    "close_dialog": {
      "description": "关闭并终止对话"
    },
    "toggle_visibility": {
      "description": "切换对话框可见性"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/character.png", "hijack.js", "lib/L2Dwidget.min.js", "lib/L2Dwidget.0.min.js", "init-live2d.js", "live2d_models/*/*", "live2d_models/*/*/*", "live2d_models/*/*/*/*"],
      "matches": ["<all_urls>"]
    }
  ]
}