{
  "manifest_version": 3,
  "name": "我的上网伙伴",
  "version": "1.5.6",
  "description": "一个可爱的动漫少女，陪伴你的网上冲浪。",
  "permissions": [
  "activeTab",
  "scripting",
  "storage",
  "tabs",
  "contextMenus",
  "notifications",
  "offscreen"
],
  "commands": {
    "refresh_summary": {
      "description": "刷新总结内容"
    },
    "close_dialog": {
      "description": "关闭并终止对话"
    },
    "toggle_visibility": {
      "description": "切换对话框可见性"
    },
    "toggle_follow_up": {
      "description": "展开追问输入框"
    },
    "toggle_tts": {
      "description": "播放或停止TTS语音"
    },
    "boss_key": {
      "description": "一键隐藏/显示所有tab里的内容（老板键）"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["speakers.json", "images/character.png", "hijack.js", "lib/L2Dwidget.min.js", "lib/L2Dwidget.0.min.js", "init-live2d.js", "live2d_models/*/*", "live2d_models/*/*/*", "live2d_models/*/*/*/*"],
      "matches": ["<all_urls>"]
    }
  ]
}